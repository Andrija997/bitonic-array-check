#include <stdio.h>
#define MAX 100
void main() {
	int array1[MAX], array2[MAX], i, j, n,m;
	scanf("%d", &n);
	for (i = 0; i < n; scanf("%d", &array1[i++]));
	for (i = 0; i < n; scanf("%d", &array2[i++]));
	int nasao = 1;
	for (i = 0; i < n; i++) {
		for (j = 0; j < n; j++) {
			if (array1[i] == array2[j]) {
				int k = (i+1) % n , m = (j+1) % n ;
				while (array1[k] == array2[m] && k != i && m != j) {
					k = (k + 1) % n;
					m = (m + 1) % n;
				}
				if (k == i && m == j) {
					if (k > m) printf("%d", k - m);
					else printf("%d", n - m + i);
					break;
				}
			}
		}
	}
}
