#include <stdio.h>
#include <stdlib.h>
#define max 50

main() {
	int elements[max], index[max] = { 0,1 };
	int i, j, k=1, z, min, n;
	while (3) {

		printf("Number of elements: ");
		scanf("%d", &n);
		if (n <= 1 || n > max) break;
		for (i=0; i<n; scanf("%d", &elements[i++]));
		min = abs(elements[0] - elements[1]);
		k = 0;
		for (i = 0; i < n; i++) {
			for (j = i + 1; j < n; j++) {
				if (abs(elements[i] - elements[j]) < min) {
					k = 0;
					min = abs(elements[i] - elements[j]);
						index[k++] = j; 
						index[k++] = i;
				}
				else if (abs(elements[i] - elements[j]) == min) {
					int nasao = 0 , nasao1 = 0;
					for (z = 0; z < k; z++) {
						if (i == index[z]) nasao = 1;
						if (j == index[z]) nasao1 = 1;
					 }
					if (!nasao)  index[k++] = i; 
					if (!nasao1) index[k++] = j;
				}
			}
		}
		printf("Razlika = %d  \n", min);
		for (i = 0; i < k-1; i++) {
			for (j = i + 1; j < k; j++) {
				if (index[j] < index[i]) {
					int tmp = index[j];
					index[j] = index[i];
					index[i] = tmp;
				}
			}
		}
		j = 0;
		z = 0;
	//	for (i = 0; i <= k; printf("%d ", index[i++])); 
		printf("\n");
		for (i = 0; i < n; i++) {
			if (i != index[z]) elements[j++] = elements[i];
			else if (z+1<k) z++;
		}
		for (i = 0; i < j; printf("%d ", elements[i++]));
		printf("\n");;
	}
}
